# Development Environment Configuration (Example)
# Copy to .env and update with your values

# Node Environment
NODE_ENV=development

# Server Port
PORT=8080
API_PORT=8080

# Database Configuration
# For local development: use localhost
# For Docker: use mysql (service name in docker-compose)
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=teacher-ai
MYSQL_USER=teacher-ai-user
MYSQL_PASSWORD=teacher-ai-pass

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=uploads
MINIO_USE_SSL=false
MINIO_SERVER_URL=http://localhost:9000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES=11d

# Docker Registry (optional, for remote registries)
DOCKER_REGISTRY=docker.io
IMAGE_TAG=latest

