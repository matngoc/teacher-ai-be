# Node Environment
NODE_ENV=production
PORT=8080

# API Configuration (Important: Change this to your domain/IP)
API_URL=https://hanatalk.api

# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=teacher-ai
MYSQL_USER=teacher-ai-user
MYSQL_PASSWORD=teacher-ai-pass
DB_PORT=3306

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=uploads
MINIO_USE_SSL=false
# For local development (inside docker)
MINIO_ENDPOINT_URL=minio:9001
